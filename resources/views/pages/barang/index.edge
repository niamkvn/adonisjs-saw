                        "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>"
             $('#datatable').DataTable( {
            // dom: 'Bfrltip',
            dom: dom,
                buttons: [
                    {
                        extend: 'copyHtml5',
                        exportOptions: {
                            columns: ':visible'                        }
                    },
                    {
                        extend: 'csvHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'print',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    'colvis',
                    {
                        text: '<i class="ti-plus btn-icon-prepend"></i> Tambah',
                        className: "btn btn-success btn-md",
                        action: function ( e, dt, node, config ) {
                            $('#tambahBarang').modal('show')
                        }
                    }
                ]
            } );
        } );
        // ========== End Plugins ==========
        // ========== Utilitas ==========
        // Auto Focus Inputs
        $('.modal').on('shown.bs.modal', function() {
            $(this).find('[autofocus]').focus();
        });
        
        // Reset Inputs and Messages
        $(".tombol-close").on('click', ()=>{
            $(".modal-body .messages").html("")
            $("input").val("")
        })
        // ========== End Utilitas ==========
        
        // ========== CRUD ===========
        function openModal(method, id, nama){
            switch(method){
                case "PUT":
                    $.ajax({
                        url: "http://localhost:3333/api/barang/"+ id,
                        type: "GET",
                    }).done((response) => {
                        $('#updateBarang input[name="kodeBaru"]').val(response.kode)
                        $('#updateBarang input[name="namaBaru"]').val(response.nama)
                        $('#updateBarang input[name="alamatBaru"]').val(response.alamat)
                        $('#updateBarang input[name="teleponBaru"]').val(response.telepon)
                        $('#updateBarang input[name="faxBaru"]').val(response.fax)
                        $("#tombolUpdate").attr("onclick", "updateBarang(" + id + ")");
                        $('#updateBarang').modal('show')
                    }).fail((jqXHR, textStatus) => {
                        alert( "Maaf, terjadi kesalahan. Error: " + textStatus );
                    });
                    break;
                case"DELETE":
                    $('#hapusBarang p').text("Apakah anda yakin akan menghapus barang dengan nama " + nama + " ?")
                    $("#tombolHapus").attr("onclick", "hapusBarang("+ id + ", '" + nama + "')");
                    $('#hapusBarang').modal('show')
                    break;
                default: 
                    break;
            }
        }

        function tambahBarang(){
            $.ajax({
                url: "http://localhost:3333/api/barang",
                type: "POST",
                dataType: "json",
                data: {
                    kode: $("#kode").val(),
                    nama: $("#nama").val(),
                    alamat: $("#alamat").val(),
                    telepon: $("#telepon").val(),
                    fax: $("#fax").val()
                }
            }).done((response) => {
                location.reload()
            }).fail((jqXHR, textStatus) => {
                if(jqXHR.status == 422){
                    let {notification} = JSON.parse(jqXHR.responseText)
                    let baris = '<div class="alert alert-' + notification.type + '" role="alert">'
                    $.each(notification.messages, (i, v) => {
                        baris = baris + '<i class="ti-alert btn-icon-prepend"></i> ' + notification.messages[i].message
                    })
                        baris = baris + '</div>'
                    $(".modal-body .messages").html(baris)
                }else{
                    alert( "Maaf, terjadi kesalahan. Error: " + textStatus );
                }
            });
        }

        function updateBarang(id){
            $.ajax({
                url: "http://localhost:3333/api/barang/"+ id,
                type: "PUT",
                dataType: "json",
                data: {
                    kodeBaru: $("#kodeBaru").val(),
                    namaBaru: $("#namaBaru").val(),
                    alamatBaru: $("#alamatBaru").val(),
                    teleponBaru: $("#teleponBaru").val(),
                    faxBaru: $("#faxBaru").val()
                }
            }).done((response) => {
                // much dank begalsepeda
                location.reload()
            }).fail((jqXHR, textStatus) => {
                if(jqXHR.status == 422){
                    let {notification} = JSON.parse(jqXHR.responseText)
                    let baris = '<div class="alert alert-' + notification.type + '" role="alert">'
                    $.each(notification.messages, (i, v) => {
                        baris = baris + '<i class="ti-alert btn-icon-prepend"></i> ' + notification.messages[i].message
                    })
                        baris = baris + '</div>'
                    $(".modal-body .messages").html(baris)
                }else{
                    alert( "Maaf, terjadi kesalahan. Error: " + textStatus );
                }
            });
        }

        function hapusBarang(id, nama){
            $.ajax({
                url: "http://localhost:3333/api/barang/"+ id,
                type: "DELETE"
            }).done((response) => {
                location.reload()
            }).fail((jqXHR, textStatus) => {
                alert( "Maaf, terjadi kesalahan. Error: " + textStatus );
            });
        }
        // ========== End CRUD ===========
    </script>
